<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:clickable="true">
    <ImageView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/abhi"
        android:id="@+id/developer_photo"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#212121"
        android:textStyle="bold"
        android:text="-> This app is made by Abhishek Vishwakarma"
        android:layout_below="@+id/developer_photo"
        android:layout_centerInParent="true"
        android:layout_marginTop="11dp"
        android:id="@+id/primaryText"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#212121"
        android:text="App version: 1.0"
        android:layout_below="@+id/primaryText"
        android:layout_centerInParent="true"/>
</RelativeLayout>